<Page
    x:Class="DePosteleinManagement.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DePosteleinManagement.Views"
    xmlns:vm="using:DePosteleinManagement.ViewModels"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">

    <Interactivity:Interaction.Behaviors>
        <Interactions:EventTriggerBehavior EventName="Loaded">
            <Interactions:InvokeCommandAction Command="{Binding LoadCommand}"></Interactions:InvokeCommandAction>
        </Interactions:EventTriggerBehavior>
    </Interactivity:Interaction.Behaviors>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Fill="DimGray"></Rectangle>
        <Image x:ConnectionId='1' x:Name="banner"
                   MaxHeight="100"
                   HorizontalAlignment="Left"
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Grid.RowSpan="1"
                   Source="http://www.depostelein.com/img/backgrounds/logo.png" />
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Grid.Row="0" Grid.Column="2">
            <Button   Height="100"  Background="White" Content="Create New" Command="{Binding CreateMenuCommand}"></Button>
            <Button Height="100"   Background="White" Content="LogOut" Command="{Binding LogOutCommand}"></Button>
        </StackPanel>

        <TextBlock Text="{Binding SelectedEvent.Title, Mode=OneWay}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

        <ListView x:ConnectionId='2'             Name="EventListView" 
                              ItemsSource="{Binding Menus}"
                              SelectedItem="{Binding SelectedMenu, Mode=TwoWay}"
                              Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
                              HorizontalAlignment="Left">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{Binding Path=Status, Converter={StaticResource myStatusConverter}}"></Rectangle>
                        <TextBlock Text="{Binding Path=Title, Converter={StaticResource myDoNothingConverter}}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <RelativePanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid x:ConnectionId='3' x:Name="detailGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Description"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.Description, Converter={StaticResource myDoNothingConverter}}" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="Type"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.Type, Converter={StaticResource myTypeConverter}}"></TextBlock>
                        <TextBlock Text="Start Date"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.StartDate, Converter={StaticResource myDateConverter}}"></TextBlock>
                        <TextBlock Text="Start Time"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.StartDate, Converter={StaticResource myTimeConverter}}"></TextBlock>
                        <TextBlock Text="End Date"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.EndDate, Converter={StaticResource myDateConverter}}"></TextBlock>
                        <TextBlock Text="End Time"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.EndDate, Converter={StaticResource myTimeConverter}}"></TextBlock>
                        <TextBlock Text="Creator"></TextBlock>
                        <TextBlock Text="{Binding SelectedEvent.Creator.Name, Converter={StaticResource myDoNothingConverter}}"></TextBlock>
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                    <Button Command="{Binding ShowMenuDetailsCommand}" Content="Show Menu Details" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </RelativePanel>
    </Grid>
</Page>

